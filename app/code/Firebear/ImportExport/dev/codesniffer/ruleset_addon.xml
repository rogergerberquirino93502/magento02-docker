<ruleset name="Firebear">
    <description>Firebear Studio Coding Standard (based on Magento2)</description>
    <arg name="extensions" value="xml,xsd"/>

    <rule ref="Generic.Files.ByteOrderMark"/>
    <rule ref="Generic.Files.LineEndings"/>
    <rule ref="Generic.WhiteSpace.DisallowTabIndent"/>

    <rule ref="Internal.NoCodeFound">
        <severity>0</severity>
    </rule>
</ruleset>
